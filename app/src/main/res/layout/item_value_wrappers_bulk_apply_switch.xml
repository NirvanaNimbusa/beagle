<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="uiModel"
            type="com.pandulapeter.beagle.appDemo.feature.main.examples.valueWrappers.list.BulkApplySwitchViewHolder.UiModel" />

    </data>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/bulk_apply_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_content_padding"
        android:checked="@{uiModel.isChecked}"
        android:gravity="center"
        android:paddingStart="@dimen/large_content_padding"
        android:paddingLeft="@dimen/large_content_padding"
        android:paddingEnd="@dimen/large_content_padding"
        android:paddingRight="@dimen/large_content_padding"
        android:text="@string/case_study_value_wrappers_require_confirmation"
        app:switchPadding="@dimen/large_content_padding" />

</layout>