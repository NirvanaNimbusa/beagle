<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="uiModel"
            type="com.pandulapeter.beagle.appDemo.feature.main.home.list.HintViewHolder.UiModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/large_content_padding"
        android:paddingLeft="@dimen/large_content_padding"
        android:paddingTop="@dimen/large_content_padding"
        android:paddingEnd="@dimen/large_content_padding"
        android:paddingRight="@dimen/large_content_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_welcome_hint_1" />

        <com.pandulapeter.beagle.appDemo.feature.shared.CodeTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_content_padding"
            android:text="@string/home_welcome_snippet" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_content_padding"
            android:text="@string/home_welcome_hint_2" />

    </LinearLayout>

</layout>