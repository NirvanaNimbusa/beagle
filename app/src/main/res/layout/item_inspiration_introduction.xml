<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="uiModel"
            type="com.pandulapeter.beagle.appDemo.feature.main.inspiration.list.IntroductionViewHolder.UiModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/large_content_padding"
        android:paddingLeft="@dimen/large_content_padding"
        android:paddingTop="@dimen/large_content_padding"
        android:paddingEnd="@dimen/large_content_padding"
        android:paddingRight="@dimen/large_content_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inspiration_welcome_hint_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inspiration_welcome_hint_2"
            android:visibility="@{uiModel.shouldShowTutorial}" />

        <com.pandulapeter.beagle.appDemo.feature.shared.CodeTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_content_padding"
            android:layout_marginBottom="@dimen/large_content_padding"
            android:text="@string/inspiration_welcome_snippet_1"
            android:visibility="@{uiModel.shouldShowTutorial}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inspiration_welcome_hint_3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/inspiration_welcome_hint_4"
            android:visibility="@{uiModel.shouldShowTutorial}" />

        <com.pandulapeter.beagle.appDemo.feature.shared.CodeTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_content_padding"
            android:text="@string/inspiration_welcome_snippet_2"
            android:visibility="@{uiModel.shouldShowTutorial}" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_content_padding"
            android:text="@string/inspiration_welcome_hint_5"
            android:visibility="@{uiModel.shouldShowTutorial}" />

    </LinearLayout>

</layout>